}
|> DrugOrder.toConstrainedOrder false
|> DrugOrder.setDoseRule
    {   DrugOrder.DoseRule.rule with
            Medication = "paracetamol"
            Frequencies = [ 2N ]
            DoseUnit = "mg"
            AdjUnit = "kg"
            TimeUnit = "day"
            Limits = [
                { DrugOrder.DoseRule.limit with
                    SubstanceName = "paracetamol"
